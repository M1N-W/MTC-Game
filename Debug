<body>
    <div class="container">
        <h1>üîç MTC Game Debug Test</h1>
        
        <div class="test-section">
            <h2>üìã Test Results</h2>
            <div id="results"></div>
        </div>

        <div class="test-section">
            <h2>üéÆ Quick Actions</h2>
            <button onclick="runAllTests()">Run All Tests</button>
            <button onclick="testAI()">Test AI</button>
            <button onclick="clearConsole()">Clear Console</button>
            <button onclick="window.location.href='index.html'">Go to Game</button>
        </div>

        <div class="test-section">
            <h2>üìù Console Output</h2>
            <pre id="console-output">Waiting for tests...</pre>
        </div>
    </div>

    <!-- Load all game scripts in order -->
    <script src="js/secrets.js"></script>
    <script src="js/config.js"></script>
    <script src="js/utils.js"></script>
    <script src="js/audio.js"></script>
    <script src="js/effects.js"></script>
    <script src="js/weapons.js"></script>
    <script src="js/map.js"></script>
    <script src="js/ui.js"></script>
    <script src="js/ai.js"></script>
    <script src="js/entities.js"></script>

    <script>
        // Capture console logs
        const logs = [];
        const originalLog = console.log;
        const originalWarn = console.warn;
        const originalError = console.error;

        console.log = function(...args) {
            logs.push({ type: 'log', message: args.join(' ') });
            originalLog.apply(console, args);
            updateConsoleOutput();
        };

        console.warn = function(...args) {
            logs.push({ type: 'warn', message: args.join(' ') });
            originalWarn.apply(console, args);
            updateConsoleOutput();
        };

        console.error = function(...args) {
            logs.push({ type: 'error', message: args.join(' ') });
            originalError.apply(console, args);
            updateConsoleOutput();
        };

        function updateConsoleOutput() {
            const output = document.getElementById('console-output');
            if (logs.length === 0) {
                output.textContent = 'No logs yet...';
                return;
            }
            output.textContent = logs.map(log => {
                const prefix = log.type === 'error' ? '‚ùå' : log.type === 'warn' ? '‚ö†Ô∏è' : '‚úÖ';
                return `${prefix} ${log.message}`;
            }).join('\n');
            output.scrollTop = output.scrollHeight;
        }

        function clearConsole() {
            logs.length = 0;
            updateConsoleOutput();
        }

        function addResult(name, status, message) {
            const results = document.getElementById('results');
            const statusClass = status === 'pass' ? 'pass' : status === 'fail' ? 'fail' : 'warning';
            const icon = status === 'pass' ? '‚úÖ' : status === 'fail' ? '‚ùå' : '‚ö†Ô∏è';
            
            const div = document.createElement('div');
            div.className = 'status ' + statusClass;
            div.innerHTML = `<strong>${icon} ${name}</strong>: ${message}`;
            results.appendChild(div);
        }

        async function runAllTests() {
            document.getElementById('results').innerHTML = '';
            console.log('üîç Starting debug tests...');

            // Test 1: Check if all required variables exist
            try {
                if (typeof BALANCE !== 'undefined') {
                    addResult('BALANCE Config', 'pass', 'Configuration loaded successfully');
                } else {
                    addResult('BALANCE Config', 'fail', 'BALANCE is undefined');
                }
            } catch (e) {
                addResult('BALANCE Config', 'fail', e.message);
            }

            // Test 2: Check AI
            try {
                if (typeof Gemini !== 'undefined') {
                    addResult('AI System', 'pass', 'Gemini AI instance created');
                    console.log('AI Model:', AI_CONFIG.model);
                    console.log('AI Enabled:', Gemini.enabled);
                } else {
                    addResult('AI System', 'fail', 'Gemini is undefined');
                }
            } catch (e) {
                addResult('AI System', 'fail', e.message);
            }

            // Test 3: Check API Key
            try {
                if (typeof API_KEY !== 'undefined' && API_KEY) {
                    const masked = API_KEY.substring(0, 10) + '...';
                    addResult('API Key', 'pass', `Key found: ${masked}`);
                } else {
                    addResult('API Key', 'warning', 'API Key not found - AI features disabled');
                }
            } catch (e) {
                addResult('API Key', 'fail', e.message);
            }

            // Test 4: Check Weapons
            try {
                if (typeof weaponSystem !== 'undefined') {
                    addResult('Weapon System', 'pass', `Current weapon: ${weaponSystem.getCurrentWeapon()}`);
                } else {
                    addResult('Weapon System', 'fail', 'weaponSystem is undefined');
                }
            } catch (e) {
                addResult('Weapon System', 'fail', e.message);
            }

            // Test 5: Check Map
            try {
                if (typeof mapSystem !== 'undefined') {
                    addResult('Map System', 'pass', 'Map system loaded');
                } else {
                    addResult('Map System', 'fail', 'mapSystem is undefined');
                }
            } catch (e) {
                addResult('Map System', 'fail', e.message);
            }

            // Test 6: Check Effects
            try {
                if (typeof particleSystem !== 'undefined' && typeof floatingTextSystem !== 'undefined') {
                    addResult('Effects System', 'pass', 'Particle and text systems loaded');
                } else {
                    addResult('Effects System', 'fail', 'Effects systems missing');
                }
            } catch (e) {
                addResult('Effects System', 'fail', e.message);
            }

            // Test 7: Check Audio
            try {
                if (typeof Audio !== 'undefined') {
                    addResult('Audio System', 'pass', 'Audio system loaded');
                } else {
                    addResult('Audio System', 'fail', 'Audio is undefined');
                }
            } catch (e) {
                addResult('Audio System', 'fail', e.message);
            }

            console.log('‚úÖ All tests completed!');
        }

        async function testAI() {
            console.log('ü§ñ Testing AI...');
            try {
                const result = await Gemini.getMissionName();
                console.log('AI Response:', result);
                addResult('AI Test', 'pass', `Got response: "${result}"`);
            } catch (e) {
                console.error('AI Test failed:', e);
                addResult('AI Test', 'fail', e.message);
            }
        }

        // Run tests on load
        window.addEventListener('load', () => {
            console.log('üöÄ Page loaded, running initial tests...');
            setTimeout(runAllTests, 500);
        });
    </script>
